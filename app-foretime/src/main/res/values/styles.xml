<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <!-- 该选项 Android 6.0 开始默认开始，会影响 TextView 绘制效率，Android Q 开始默认关闭-->
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
    </style>

    <style name="TextVeryBig">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/TextColorNormal</item>
    </style>

    <style name="TextBig">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/TextColorNormal</item>
    </style>

    <style name="TextBigHint">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/TextColorHint</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/TextColorNormal</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/TextColorNormal</item>
    </style>

    <style name="TextVerySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:color">@color/TextColorNormal</item>
    </style>

    <style name="TextVice">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/TextColorVice</item>
    </style>

    <style name="baseDialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <!--<item name="android:windowEnterAnimation">@anim/base_dialog_enter_anim</item>-->
        <!--<item name="android:windowExitAnimation">@anim/base_dialog_exit_anim</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
