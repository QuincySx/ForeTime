<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="8dp"
    android:background="#FAFAFA">

    <View
        android:id="@+id/viewStatus"
        android:layout_width="18dp"
        android:layout_height="0dp"
        android:background="#cccccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCalendarTitle"
        style="@style/TextBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:text="5.15尿裤子日"
        app:layout_constraintLeft_toRightOf="@+id/viewStatus"
        app:layout_constraintRight_toLeftOf="@+id/tvTypeData"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTypeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:text="累计日"
        android:textColor="#909090"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="2018-05-15"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvCalendarTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvCalendarTitle" />

    <TextView
        android:id="@+id/tvWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="周二"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tvData"
        app:layout_constraintTop_toTopOf="@+id/tvData" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="起"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tvWeek"
        app:layout_constraintTop_toTopOf="@+id/tvWeek" />

    <TextView
        android:id="@+id/tvTimeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="周二"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeUnit"
        app:layout_constraintRight_toLeftOf="@+id/tvTimeNumber" />

    <TextView
        android:id="@+id/tvTimeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="18"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvTimeUnit" />

    <TextView
        android:id="@+id/tvTimeUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="18dp"
        android:text="日"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>